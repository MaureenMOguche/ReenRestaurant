@page
@model StLawRestaurant.Pages.Admin.Menu.IndexModel

<div class="menu-container">
</div>

<div class="container p-3">
	<div class="row">
		<div class="col-6">
			<h2 class="text-primary">Menu List</h2>
		</div>
		<div class="col-6 text-end">
			<a asp-page="upsert" class="btn btn-primary">
				<i class="bi bi-plus-square"></i> &nbsp;Create Menu
			</a>
		</div>
	</div>

	<br /><br />

	<table class="table table-bordered table-striped" style="width: 100%">
		<thead>
			<tr>
				<th style="width: 25%"></th>
				<th style="width: 35%" class="text-center">Menu Name</th>
				<th style="width: 20%" class="text-center">Price</th>
				<th style="width: 20%" class="text-center">Actions</th>
			</tr>
		</thead>

		<tbody>
			@foreach(var item in Model.menuItems)
			{
				<tr>
					<td>
						<img src="@item.MenuImage" class="img-thumbnail" />
					</td>
					<td align="center" valign="middle">@item.MenuName</td>
					<td align="center" valign="middle">@item.Price</td>
					<td class="text-center" align="center" valign="middle">
							<a class="btn btn-secondary" asp-page="Upsert" asp-route-id="@item.Id">
							<i class="bi bi-pencil-square"></i>
						</a>
						<a class="btn btn-danger" asp-page="./Delete" asp-route-id="@item.Id">
							<i class="bi bi-trash"></i>
						</a>
					</td>
				</tr>
			}
		</tbody>
	</table>
</div>